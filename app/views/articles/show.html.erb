<div class="container">
  <%= render "common/flashes" %>
</div>

<div class="container">
  <div class="row">

    <div class="article-show">

      <div class="col-md-9 article-show-box">

        <!-- 标题 -->
        <div class="article-title">
          <h3><%= @article.title %></h3>
        </div>

        <!-- 作者、发布时间 -->
        <div class="article-author">
          <span> <%= @article.user.display_name %></span> ·
          发布于<span> <%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span> · 分类:
          <% @article.article_categories.each do |c| %>                  
            <span><%= c.name %></span>
          <% end %>
          <hr>
        </div>

        <!-- 摘要 -->
        <div class="article-summary">
          <p>
            <blockquote>
                <%= simple_format(@article.summary) %>
            </blockquote>
          </p>
        </div>

        <!-- 主图 -->
        <% if @article.image.present? %>
          <div class="article-image">
            <%= image_tag(@article.image.articleimg.url, class: "img-rounded img-responsive center-block") %>
          </div>
        <% end %>
        <hr>

        <!-- 内容 -->
        <div class="article-content">
          <%= simple_format(@article.content) %>
        </div>

        <hr>



      </div>

      <%= render "sidebar_for_article_show.html.erb" %>

    </div>

  </div>
</div>
