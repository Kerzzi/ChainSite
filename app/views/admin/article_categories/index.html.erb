<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">文章分类管理</div>
  <div class="panel-body">
    <p>...</p>
    <div class="group">
      <%= link_to("新增文章分类", new_admin_article_category_path, class: "btn btn-primary pull-right") %>
    </div>
    <p>操作说明：mark</p>
    <hr>
    
    <div class="admin_article_category">
      <!-- Table -->
      
        <table class="table table-hover">
          <thead>
            <tr>
              
              
              <td>ID</td>
              <td>分类名</td>
              <td>排序</td>
              <td>操作</td>
            </tr>
          </thead>
          <tbody>
            <% @article_categories.each do |article_category| %>
              <tr>
          
          
                <td><%= article_category.id %></td>
                <td><%= article_category.name %></td>
                <td><%= article_category.sort %></td>
                <td>

                  <%= link_to "编辑", edit_admin_article_category_path(article_category)%>
                  <%= link_to "删除", admin_article_category_path(article_category), 'data-confirm' => '确定删除?', method: :delete %>
                  
                </td>
              </tr>
            <% end %>
          </tbody>
        </table><!-- /Table -->

    
      <div class="text-center">
        <div class="text-center">
          <%= will_paginate @article_categories, renderer: BootstrapPagination::Rails, :previous_label => t('上一页'), :next_label => t('下一页') %>
        </div>
      </div>
    </div><!-- /admin_article_category -->
  </div><!-- /panel-body -->
</div>
