<div class="panel panel-default">
  <div class="panel-heading">网址导航管理</div>
  <div class="panel-body">
    <p>...</p>
    <div class="group">
      <%= link_to("新增网址", new_admin_site_path, class: "btn btn-primary pull-right") %>
    </div>
    <p>操作说明：mark</p>
    <hr>
    
    <!-- Table -->
    <div id="admin_sites">
      
        <table class="table table-hover">
          <thead>
            <tr>
              
              <th>#</td>
              <th>站点名称</th>
              <th>网址</th>
              <th>介绍</th>
              <th>分类</th>
              <th class="opts">操作</th>
            </tr>
          </thead>
          <tbody>
            <% @sites.each do |site| %>
              <tr>
                
                <td><%= site.id %></td>
                <td><%= site.name %></td>
                <td><%= site.url %></td>
                <td  style="width:600px; overflow: hidden;text-overflow: ellipsis;"><%= site.description %></td>
                <td><%= site.site_node.name %></td>
                <td>

                  <%= link_to "编辑", edit_admin_site_path(site) %>
                  <%= link_to "删除", admin_site_path(site), 'data-confirm' => '确定删除?', method: :delete %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table><!-- /Table -->
        
      
    
      <div class="text-center">
        <%= will_paginate @sites, renderer: BootstrapPagination::Rails, :previous_label => t('上一页'), :next_label => t('下一页') %>
      </div>
    </div><!-- /admin_site -->
  </div><!-- /panel-body -->
</div>


