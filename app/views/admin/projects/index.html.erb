<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">项目管理</h3>
  </div>
  <div class="panel-body">
    <div class="group">
      <%= link_to("新增项目信息", new_admin_project_path, class: "btn btn-primary pull-right") %>
    </div>

    <p>操作说明：mark</p>
    <hr>

    <!-- Table -->
    <div id="admin_projects">
      

        <table class="table table-hover">
          <thead>
            <tr>
              
              <td>ID</td>
              <td>项目名称</td>
              <td>审核状态</td>
              <td>官网</td>
              <td>提交人</td>
              <td class="opts">管理操作</td>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>

                <td><%= project.id %></td>
                <td><%= project.title %></td>
                <td><%= t(project.status, :scope => "project.status") %><%= link_to(project.title, admin_project_path(project)) %></td>
                <td><%= project.website %></td>
                <td><%= project.user.email %></td>
                <td>
                  <%= link_to '编辑', edit_admin_project_path(project) %>
                  <%= link_to '删除', admin_project_path(project), 'data-confirm' => '确认删除?' , method: :delete %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table><!-- /Table -->


      <div class="text-center">
        <%= will_paginate @projects, renderer: BootstrapPagination::Rails, :previous_label => t('上一页'), :next_label => t('下一页') %>
      </div>
    </div><!-- /admin_projects -->
  </div><!-- /panel-body -->
</div>

