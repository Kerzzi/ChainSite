<div class="container">
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">用户信息管理</div>
    <div class="panel-body">
      <p>操作说明：mark</p>
      <hr>

      <!-- Table -->
      <div id="admin_users">

          <table class="table table-hover">
            <thead>
              <tr>

                <th>用户ID</th>
                <th>邮箱</th>
                <th>用户权限</th>
                <th>管理操作</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>

                  <td><%= user.id %></td>
                  <td><%= user.email %></td>
                  <td><%= t(user.role, :scope => "user.role") %></td>
                  <td><%= link_to '编辑', edit_admin_user_path(user), class: "fa fa-pencil" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>


        <div class="text-center">
          <%= will_paginate @users, renderer: BootstrapPagination::Rails, :previous_label => t('上一页'), :next_label => t('下一页') %>
        </div>
      </div>
    </div>
  </div>
</div>
